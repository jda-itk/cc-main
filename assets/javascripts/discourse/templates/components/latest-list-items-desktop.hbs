
<div class="latest-topic-list ember-view">
    <div aria-role="heading" aria-level="2" class="table-heading">Latest</div>
    {{#each latest as |topic|}}
    <div data-topic-id="{{topic.id}}" class="latest-topic-list-item ember-view">
        {{!-- <div class="topic-poster">
            <a data-user-card="ccadminkris" href="/u/ccadminkris" id="ember3608" class="ember-view">
                <img alt="" width="45" height="45" src="https://discourse-cdn.qa.collegeconfidential.com/letter_avatar_proxy/v4/letter/c/e480ec/90.png" class="avatar" title="ccadminkris" aria-label="ccadminkris">
            </a>
        </div> --}}
        <div class="main-link">
            <div class="top-row">
                <a href="/t/{{topic.slug}}/{{topic.id}}/{{topic.posts_count}}" class="title" data-topic-id="{{topic.id}}">{{topic.title}}</a>
                {{#if topic.unread}}
                <span class="topic-post-badges ember-view">
                    &nbsp;<a href="/t/{{topic.slug}}/{{topic.id}}/{{topic.posts_count}}" title="you have {{topic.unread}} unread post in this topic" class="badge badge-notification new-posts">{{topic.unread}}</a>
                </span>
                {{/if}}
            </div>
            <div class="bottom-row">
                <a class="badge-wrapper bullet" href="/c/{{topic.category.0.slug}}/{{topic.category_id}}">
                    <span class="badge-category-bg" style={{ccBackgroundColor topic.category.0.color}}></span>
                    <span data-drop-close="true" class="badge-category clear-badge">
                        <span class="category-name">{{topic.category.0.name}}</span>
                    </span>
                </a>
            </div>
        </div>
        <div class="topic-stats">
            <div class="num posts-map posts heatmap-" title="This topic has {{topic.posts_count}} replies">
                <a href="" class="posts-map badge-posts heatmap-">
                    <span class="number" aria-label="This topic has {{topic.posts_count}} replies">{{topic.posts_count}}</span>
                </a>
            </div>
            <div class="topic-last-activity">
                <a href="/t/{{topic.slug}}/{{topic.id}}/{{topic.posts_count}}" title="First post: {{ccDateFormat topic.created_at}}
Posted: {{ccDateFormat topic.last_posted_at}}">
                    <span data-time="{{ccDateNumber topic.last_posted_at}}">{{ccDaysPass topic.last_posted_at}}</span>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="more-topics">
        <a href="/latest" class="btn btn-default pull-right">More</a>
    </div>
</div>